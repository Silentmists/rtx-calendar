% } elsif ($Ticket->DueObj->Date eq $Date->strftime("%F")) {
<img src="<%$RT::WebImagesURL%>/arrow_to.png" />
% } elsif ($Ticket->CreatedObj->Date eq $Date->strftime("%F")) {
<img src="<%$RT::WebImagesURL%>/arrow_from.png" />
% }
	<a href="<%$RT::WebPath%>/Ticket/Display.html?id=<%$Ticket->Id%>">
           <% $Ticket->QueueObj->Name %> #<% $Ticket->Id %>
           <% length($Ticket->Subject) > 80 ? substr($Ticket->Subject, 0, 77) . "..." : $Ticket->Subject %></a></small><br />
	<span class="tip">
