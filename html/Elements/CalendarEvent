% if ($members->Count == 0) {
<&|/l&>none</&>
% } else {
%   my @requestors;
%   while (my $watcher = $members->Next) {
%     push @requestors, $watcher->MemberObj->Object->Name;
%   }
<% join ", ", @requestors %>
% }
<br />
	</span>
