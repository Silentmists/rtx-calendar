<%args>
$Search => undef
$Object => undef
$HiddenField => undef
</%args>

<&| /Widgets/TitleBox, title => $title
                     , title_class=> 'inverse'
                     , color => "#993333" &>

% if ($ICalURL) {
<p>Your can paste this url in your calendar  : <b><%$RT::WebURL%>/NoAuth/Calendar/<%$Id%>/<%$ICalURL->Content%></b><p>
<table>
<tr>
<td>
<form action="<%$RT::WebPath%>/Prefs/Calendar.html" method="post">
<input type="hidden" name="HiddenField" value="<%$HiddenField%>" />
<input type="submit" class="button" name="ResetURL" value="<%loc('Disable ICal')%>" />
</form>
</td>
<td>
<form action="<%$RT::WebPath%>/Prefs/Calendar.html" method="post">
<input type="hidden" name="HiddenField" value="<%$HiddenField%>" />
<input type="submit" class="button" name="ChangeURL" value="<%loc('Change ICal URL')%>" />
</form>
</td>
</tr>
</table>
% } else {
<p>Your ICal feed is disabled.</p>

<form action="<%$RT::WebPath%>/Prefs/Calendar.html" method="post">
<input type="hidden" name="HiddenField" value="<%$HiddenField%>" />
<input type="submit" class="button" name="ChangeURL" value="<%loc('Enable ICal')%>" />
</form>
% }

</&>

<%init>
my $title;
my $ICalURL;
my $Id;

if ($Object) {
  $title = loc('ICal Feed Configuration for "') . ($Search->Description || loc('Unnamed search')) . '"';
  $HiddenField = "SavedSearch-" . $Search->Id;
  $ICalURL = $Search->FirstAttribute('ICalURL');
  $Id = $session{CurrentUser}->Id . "@" . $Search->Id;
} else {
  $title = loc('ICal Feed Configuration for "') . loc('Private Calendar') . '"';
  $HiddenField = "Private";
  $ICalURL = $session{CurrentUser}->FirstAttribute('ICalURL');
  $Id = $session{CurrentUser}->Id
}

</%init>